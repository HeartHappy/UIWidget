<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.hearthappy.uiwidget.ripple.WaterRippleView
        android:id="@+id/rvWaterRipple"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:wrv_corner_radius="12dp"
        app:wrv_enable_auto_carousel="true"
        app:wrv_enable_loop_model="true"
        app:wrv_inner_glow_color="@color/color_yellow"
        app:wrv_inner_glow_radius="4dp" />

    <com.hearthappy.uiwidget.image.RoundImageView
        android:id="@+id/rivImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:borderColor="@color/color_purple"
        app:borderWidth="8dp"
        app:isCircle="true"
        app:gradientBorderAngle="12"
        app:gradientBorderColors="@array/gradient_colors"
        app:gradientBorderPositions="@array/gradient_positions"
        app:gradientInnerBorderColors="@array/inner_gradient_colors"
        app:gradientInnerBorderPositions="@array/gradient_positions"
        app:gradientInnerBorderAngle="120"
        app:gradientType="SweepGradient"
        app:innerBorderColor="@color/color_yellow"
        app:innerBorderWidth="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvWaterRipple" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>