<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TurntableView">
        <!--背景-->
        <attr name="tv_bgr" format="reference" />
        <!--选中高亮背景-->
        <attr name="tv_bgr_select" format="reference" />
        <!--文本小图标-->
        <attr name="tv_text_icon_start" format="reference" />
        <attr name="tv_text_icon_end" format="reference" />
        <!--文本小图标间距-->
        <attr name="tv_text_icon_horizontal_spacing" format="dimension" />
        <!--文本字体大小-->
        <attr name="tv_text_size" format="dimension" />
        <!--文本颜色-->
        <attr name="tv_text_color" format="color|reference" />
        <!--均分数量-->
        <attr name="tv_equal_number" format="integer" />
        <!--调试时，显示索引-->
        <attr name="tv_show_index" format="boolean" />
        <!--调试时，显示icon-->
        <attr name="tv_show_icons" format="boolean" />
        <!--是否显示高亮结果-->
        <attr name="tv_show_highlight" format="boolean" />
        <!--最终结果居中，正对12点-->
        <attr name="tv_show_result_center" format="boolean" />
        <!--文本偏移量-->
        <attr name="tv_text_vertical_offset" format="dimension" />
        <!--icon大小-->
        <attr name="tv_icon_size" format="dimension" />
        <!--icon偏移占比，0:圆心，1.0：边缘-->
        <attr name="tv_icon_position_percent" format="float" />
        <!--控制转盘开始速度，值越大开始的速度越快-->
        <attr name="tv_start_speed" format="float" />
        <!--慢下来的速率，值越小停下得越慢-->
        <attr name="tv_deceleration_rate" format="float" />
        <!--最小旋转圈数-->
        <attr name="tv_min_rotation_number" format="integer" />
        <!--文本描边颜色-->
        <attr name="tv_text_outline_color" format="color" />
        <!--描边宽-->
        <attr name="tv_text_outline_width" format="dimension" />
        <!--指定结果偏移角度范围。例如只随机偏移角度：-14、-13、-12、-11、11、12、13、14-->
        <attr name="tv_angle_offset_array" format="reference" />
        <!--指定结果偏移角度范围。例如：-14~14-->
        <attr name="tv_angle_offset_range" format="reference" />
        <!--背景旋转度数-->
        <attr name="tv_bgr_rotation" format="float" />
        <!--内容旋转度数-->
        <attr name="tv_content_rotation" format="float" />
        <!--调试模式：默认关闭false-->
        <attr name="tv_is_debug" format="boolean" />

    </declare-styleable>

    <declare-styleable name="PkView">
        <!--文本padding-->
        <attr name="pk_text_horizontal_padding" format="dimension" />
        <attr name="pk_text_size" format="dimension" />
        <attr name="pk_text_color" format="color" />
        <attr name="pk_red_square_solid_color" format="color" />
        <attr name="pk_red_gradient_color_start" format="color" />
        <attr name="pk_red_gradient_color_end" format="color" />
        <attr name="pk_blue_square_solid_color" format="color" />
        <attr name="pk_blue_gradient_color_start" format="color" />
        <attr name="pk_blue_gradient_color_end" format="color" />
        <attr name="pk_progress_height" format="dimension" />
        <attr name="pk_icon" format="reference" />
        <attr name="pk_round_radius" format="dimension" />
        <!--文本描边颜色-->
        <attr name="pk_text_outline_color" format="color" />
        <!--描边宽-->
        <attr name="pk_text_outline_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DigitScrollView">
        <!--数字滚动图片资源-->
        <attr name="nr_digit_images" format="reference" />
        <!--图片资源宽\高-->
        <attr name="nr_digit_image_width" format="dimension" />
        <attr name="nr_digit_image_height" format="dimension" />
        <!--文本字体大小-->
        <attr name="nr_text_size" format="dimension" />
        <!--文本颜色-->
        <attr name="nr_text_color" format="color|reference" />
        <!--文本描边颜色-->
        <attr name="nr_text_outline_color" format="color" />
        <!--描边宽-->
        <attr name="nr_text_outline_width" format="dimension" />
        <!--显示数字数量-->
        <attr name="nr_digit_count" format="integer" />
        <!--填充模式-->
        <attr name="nr_fill_mode" format="enum">
            <enum name="normal" value="0" />
            <enum name="filling" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_height" format="dimension" />
        <attr name="indicator_radius" format="dimension" />
        <attr name="indicator_selected_width" format="dimension" />
        <attr name="indicator_selected_height" format="dimension" />
        <attr name="indicator_selected_radius" format="dimension" />
        <attr name="indicator_spacing" format="dimension" />
        <attr name="indicator_color" format="color" />
        <attr name="indicator_selected_color" format="color" />
        <attr name="indicator_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="NineGridView">
        <!--单个时宽度-->
        <attr name="ngv_row1_column1_width" format="dimension" />
        <!--单个时高度-->
        <attr name="ngv_row1_column1_height" format="dimension" />
        <!--item宽高-->
        <attr name="ngv_item_size" format="dimension" />
        <!--边距-->
        <attr name="ngv_item_margin" format="dimension" />
        <!--垂直边距-->
        <attr name="ngv_item_margin_vertical" format="dimension" />
        <!--水平边距-->
        <attr name="ngv_item_margin_horizontal" format="dimension" />
        <!--最多显示数量，多余折叠-->
        <attr name="ngv_maximum_number_displays" format="integer" />
    </declare-styleable>
</resources>